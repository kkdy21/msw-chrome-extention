{
  "manifest_version": 3,
  "name": "MSW DevTools Controller",
  "description": "Control MSW handlers from a dedicated DevTools panel.",
  "version": "0.1.0",
  "icons": {},
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["tabs", "scripting"]
}
